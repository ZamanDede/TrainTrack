<%- include('components/navbar') %>

    <div class="container">
        <!-- Model Header Section -->
        <div class="model-header">
            <h1>
                <%= model.heading %>
            </h1>
            <p>
                <%= model.description %>
            </p>
        </div>

        <!-- Full Model Info Section -->
        <div class="model-info">
            <h2>Model Information</h2>

            <!-- Info Table -->
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Property</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Heading</td>
                                <td>
                                    <%= model.heading %>
                                </td>
                            </tr>
                            <tr>
                                <td>Description</td>
                                <td>
                                    <%= model.description %>
                                </td>
                            </tr>
                            <tr>
                                <td>Model Type</td>
                                <td>
                                    <%= model.model_type %>
                                </td>
                            </tr>
                            <tr>
                                <td>Task Type</td>
                                <td>
                                    <%= model.task_type %>
                                </td>
                            </tr>
                            <tr>
                                <td>Usage</td>
                                <td>
                                    <%= model.usage %>
                                </td>
                            </tr>
                            <tr>
                                <td>Created At</td>
                                <td>
                                    <%= model.created_at %>
                                </td>
                            </tr>
                            <tr>
                                <td>Last Updated</td>
                                <td>
                                    <%= model.last_updated %>
                                </td>
                            </tr>
                            <tr>
                                <td>Author</td>
                                <td>
                                    <%= model.author %>
                                </td>
                            </tr>
                            <tr>
                                <td>Dataset</td>
                                <td>
                                    <%= model.dataset %>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>


            <!-- Visualizations Carousel -->
            <div id="modelVisualsCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <% model.visuals.forEach((visual, index)=> { %>
                        <li data-target="#modelVisualsCarousel" data-slide-to="<%= index %>"
                            class="<%= index === 0 ? 'active' : '' %>"></li>
                        <% }); %>
                </ol>
                <div class="carousel-inner">
                    <% model.visuals.forEach((visual, index)=> { %>
                        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                            <img class="d-block w-100" src="<%= visual %>" alt="Slide <%= index + 1 %>"
                                style="max-height: 500px; object-fit: contain;">
                            <div class="carousel-caption d-none d-md-block">
                                <h5></h5>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <a class="carousel-control-prev" href="#modelVisualsCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true" style="filter: invert(1);"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#modelVisualsCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true" style="filter: invert(1);"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>




            <!-- Metrics Section -->
            <div class="row">
                <div class="col-md-12">
                    <h3>Metrics</h3>
                    <% if (model.metrics && model.metrics.length) { %>
                        <% model.metrics.forEach(metric=> { %>
                            <pre><%= metric.content %></pre> <!-- Display metrics file content -->
                            <% }); %>
                                <% } else { %>
                                    <p>No metrics available.</p>
                                    <% } %>
                </div>
            </div>
        </div>


        <!-- Training Section -->
        <div class="training-section">
            <h2>Training</h2>
            <div class="row">
                <div class="col-md-6">
                    <form id="trainForm" action="/models/<%= model.id %>/execute" method="POST"
                        style="display: inline;">
                        <input type="hidden" name="script" value="model.py">
                        <button id="trainButton" type="submit" class="btn btn-primary">Run model.py</button>
                    </form>
                    <form id="visualizeForm" action="/models/<%= model.id %>/execute" method="POST"
                        style="display: inline;">
                        <input type="hidden" name="script" value="visualize.py">
                        <button id="visualizeButton" type="submit" class="btn btn-secondary" disabled>Run
                            visualize.py</button>
                    </form>
                    <p id="training-status">Status: Not Started</p>
                </div>
            </div>
        </div>

    </div>

    <!-- Include the external JavaScript file -->
    <script src="/js/modelStatus.js"></script>

    <!-- Inline Script to Pass Model ID -->
    <script>
        var modelId = '<%= model.id %>';
        checkStatus(modelId);
        setInterval(function () { checkStatus(modelId); }, 2000); // Check every 2 seconds
    </script>
