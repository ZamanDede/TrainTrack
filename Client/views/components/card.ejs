<div class="card mb-4">
  <img src="<%= item.imageUrl || '/img/default.jpg' %>" class="card-img-top" alt="<%= item.heading %> Image" style="height: 200px; object-fit: cover;">
  <div class="card-body">
    <h5 class="card-title"><%= item.heading %></h5>
    <p class="card-text"><strong>Author:</strong> <%= item.author %></p>
    <a href="<%= item.retrieval_link || item.localLink %>" class="btn btn-primary">View Details</a>
  </div>
</div>
